{
  "name": "api-test-framework",
  "version": "1.0.0",
  "description": "Simple API testing framework with TypeScript, Supertest, and Mochawesome",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "test:parallel": "mocha --parallel",
    "test:coverage": "c8 mocha",
    "test:debug": "mocha --inspect-brk",
    "clean": "rimraf dist reports coverage .tsbuildinfo",
    "prebuild": "npm run clean",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js"
  },
  "keywords": [
    "api",
    "testing",
    "typescript",
    "supertest",
    "mocha",
    "mochawesome"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "mocha": "^10.3.0",
    "mochawesome": "^7.1.3",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@platformatic/kafka": "^1.11.0",
    "@types/pino": "^7.0.4",
    "chai": "^4.5.0",
    "dotenv": "^16.4.5",
    "pino": "^9.9.0",
    "supertest": "^7.1.4"
  }
}
