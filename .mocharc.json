{
  "require": ["ts-node/register/transpile-only", "dotenv/config"],
  "extensions": ["ts"],
  "spec": "src/tests/**/*.test.ts",
  "recursive": true,
  "reporter": "mochawesome",
  "reporter-options": [
    "reportDir=reports",
    "reportFilename=test-report",
    "html=true",
    "json=true",
    "overwrite=false",
    "timestamp=mmddyyyy_HHMMss",
    "charts=true",
    "reportPageTitle=API Test Results",
    "embeddedScreenshots=true",
    "inlineAssets=true"
  ],
  "timeout": 20000,
  "retries": 1,
  "color": true,
  "bail": false,
  "parallel": false,
  "jobs": 1,
  "grep": "",
  "exit": true,
  "checkLeaks": true,
  "forbidOnly": true,
  "forbidPending": false
}