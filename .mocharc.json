{
  "require": ["ts-node/register/transpile-only", "dotenv/config"],
  "extensions": ["ts"],
  "spec": "src/tests/**/*.test.ts",
  "recursive": true,
  "reporter": "mochawesome",
  "reporter-options": [
    "reportDir=reports",
    "reportFilename=test-report",
    "html=true",
    "json=true",
    "overwrite=false",
    "timestamp=mmddyyyy_HHMMss"
  ],
  "timeout": 20000,
  "retries": 1,
  "color": true
}